<%- include('partials/header') %>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label id="bolded">Title</label>
        <textarea
          class="form-control"
          type="text"
          name="postTitle"
        ></textarea>
    
        <label id="bolded">Post</label>
        <textarea
          class="form-control"
          type="text"
          name="postContent"
          rows="5"
          cols="30"
        ></textarea>
    </div>

    <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>

